<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.karen.medappjam1.UserActivity">

    <TextView
        android:id="@+id/myEventsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myEvents" />


    <TextView
        android:id="@+id/eventButtonText"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="50dp"
        android:elevation="100dp"/>
    <Button
        android:id="@+id/eventButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/myEventsLabel"
        android:paddingRight="30dp"
        android:onClick="createEvent"
        />

    <TextView
        android:id="@+id/eventButtonText2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="50dp"
        android:elevation="100dp"
        android:layout_alignRight="@+id/eventButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/secondEventButton"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_above="@+id/suggestedLabel"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="displayDetails"/>


    <TextView
        android:id="@+id/suggestedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:text="@string/suggestedLabel"
        android:layout_below="@+id/eventButton"/>

    <Button
        android:id="@+id/eventButton2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/suggestedLabel"/>



    <TextView
        android:id="@+id/eventButton2Text"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="25dp"
        android:text="Tai Chi \n 11/26 Sat. \n AT 8 am \n UC Irvine"
        android:elevation="100dp"
        android:onClick="displayDetailsHard"
        android:layout_below="@+id/suggestedLabel"/>


    <Button
        android:id="@+id/buttonUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forum"
        android:layout_alignBaseline="@+id/calendarButton"
        android:layout_alignBottom="@+id/calendarButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp" />

    <Button
        android:text="Calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:id="@+id/calendarButton"

        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/eventButtonText"
        android:layout_alignEnd="@+id/eventButtonText" />

</RelativeLayout>

