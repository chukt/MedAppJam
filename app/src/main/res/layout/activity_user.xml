<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.karen.medappjam1.UserActivity">

    <EditText
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Hello, Username"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/myEventsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myEvents"
        android:layout_below="@+id/user" />

    <!--What about a ImageButton???-->
    <Button
        android:id="@+id/eventButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Event \n\n\n\n\n"
    android:layout_below="@+id/myEventsLabel"/>

    <Button
        android:id="@+id/buttonUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forum" />


    <EditText
        android:id="@+id/suggestedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:text="@string/suggestedLabel"
        android:layout_below="@+id/eventButton"/>

    <Button
        android:id="@+id/eventButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Event \n\n\n\n\n"
        android:layout_below="@+id/suggestedLabel"/>

    <Button
        android:text="Calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:id="@+id/calendarButton"
        android:layout_alignRight="@+id/buttonUrl"
        android:layout_alignEnd="@+id/buttonUrl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

